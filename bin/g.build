g.tools
cd $PROJECT_HOME/go
go generate ./src/rakewire/...

eval $(go env)

if [ "$1" = "linux" ]; then
	export GOOS=linux
	export GOARCH=amd64
fi

. $PROJECT_HOME/bin/b.vars

go build -tags netgo -ldflags "$LDFLAGS" -o ../rakewire-${GOOS}-${GOARCH} ./src/rakewire/rakewire.go

